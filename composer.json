{
    "name": "bolt/bolt-extension-starter",
    "description": "A description about your extension should go here.",
    "type": "bolt-extension",
    "keywords" : [ "foo", "bar" ],
    "require": {
        "bolt/bolt": ">=2.0.0,<3.0.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name", 
            "email": "you@example.com"
        }
    ],
	"minimum-stability" : "dev",
	"prefer-stable" : true,
    "autoload": {
        "files": [
            "init.php"
        ],
        "psr-4": {
            "Bolt\\Extension\\YourName\\ExtensionName\\": "",
            "Bolt\\Extension\\YourName\\ExtensionName\\Tests\\": "tests"
        }
    },
    
    "extra": {
        "bolt-assets": "assets"
    }
}
